{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022",
			"DOM"
		],
		"jsx": "react-jsx",
		"sourceMap": true,
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "Node16"
	},
	"include": ["src/**/*", "webview/**/*"],
	"exclude": ["node_modules", "dist"]
}
